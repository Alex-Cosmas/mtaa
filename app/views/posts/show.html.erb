
<div class="p-4">

<div class="flex items-center justify-between">
  <div class="w-3/4">
    <h1 class="text-3xl font-bold"><%= @post.title  %></h1>
  </div>

  <div class="flex w-1/4">
    <p class="mx-2">Share</p>
    <p class="mx-1">Whatsapp</p>
    <p class="mx-1">Facebook</p>
  </div>

</div>

<div class="text-xl">
<%= simple_format @post.content %>
</div>


<div class="text-sm mt-3 border-t border-teal-600 pt-2">
     
     <div class="flex justify-between ">
          <span class=" ">Post ID: <%= @post.id.to_s %></span>
          <div class="w-1/4">
               Posted 
                    <span class="bg-gray-100 text-gray-900 rounded px-3">
                         <%= time_ago_in_words @post.created_at %> ago
                    </span>
          </div>
     </div>

     
</div>


</div>
